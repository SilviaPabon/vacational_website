<div class="container container--100vh container--contentCenter">

    <div class="grid-12 container--rounded">
        <div class="form-container">
            <h2>ADMIN CREATE ACCOUNT</h2>
            <form action="/admin/createAccount" method="post" id="form">
                <div class="form-group" id="group__fullname">
                    <label for="fullname" class="subtitle--orange">Fullname</label>
                    <div class="form__group-input">
                        <input type="text" name="usersFullname" id="fullname" placeholder="Your fullname here" class="form__input">
                        <i class="form__icon-vstate fas fa-times-circle"></i>
                    </div>
                    <p class="form__input-error">El usuario tiene que ser de 4 a 32 dígitos y solo puede contener numeros, letras y guion bajo.</p>
                </div>

                <div class="form-group" id="group__username">
                    <label for="username" class="subtitle--orange">Username</label>
                    <div class="form__group-input">
                        <input type="text" name="username" id="username" placeholder="Your username here" class="form__input">
                        <i class="form__icon-vstate fas fa-times-circle"></i>
                    </div>
                    <p class="form__input-error">El usuario tiene que ser de 4 a 32 dígitos y solo puede contener numeros, letras y guion bajo.</p>
                </div>

                <div class="form-group" id="group__password">
                    <label for="password" class="subtitle--orange">Password</label>
                    <div class="form__group-input">
                        <input type="password" name="password" id="password" placeholder="***********" class="form__input">
                        <i class="form__icon-vstate fas fa-times-circle"></i>
                    </div>
                    <p class="form__input-error">La contraseña debe tener de 4 a 24 caracteres</p>
                </div>

                <div class="form-group">
                    <label for="roleId" class="subtitle--orange">Account role</label>
                    <select name="roleId" id="roleId" class="form__input">
                        <option value="1">1 (Admin)</option>
                        <option value="2" selected>2 (User)</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn__primary">
                        CREATE THE ACCOUNT
                    </button>
                </div>

                {{!--ERROR MESSAGE--}}
                <div class="form__group">
                    <p class="parr parr--black">Already has an account? <a href="/users/signin" class="parr--orange">Login</a></p>
                    <p class="form__message" id="form__message">Error por favor rellena el formulario correctamente.</p>
                    <button class="btn btn__primary">
                        CREATE MY ACCOUNT
                    </button>
                </div>
            </form>
        </div>
        <div class="auth-img">
            <img src="/images/vectors/login_vector.svg" alt="Signup, representational image">
        </div>
    </div>

</div>

<script src="/scripts/auth/signup.js"></script>