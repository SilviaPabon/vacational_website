{{!-- para listar nuestras reservaciones --}}
<div class="container container--100vh">
    <h1 class="title">My plans</h1>
    {{#if plans}}
    <a href="/plans/" class="btn btn__primary">Add a new plan</a>
    {{/if}}

    {{!-- Alerta de que los planes ofertados son falsos --}}
    <div class="alert alert--ward">
        <button class="alert__close">
            <i class="fas fa-times"></i>
        </button>
        <p class="alert__message"><strong>This web page has been produced just for academic purposes:</strong> All reservations that may be shown below are completely fictitious.</p>
    </div>
    
    <div class="userplans-container">
        {{!-- recorrer --}}
        {{#each plans}}
            <article class="userplans-card">
                <div class="userplans-card__header">
                    <img loading="lazy" src="{{plansImageUrl}}" alt="{{plansName}} plan image" class="userplans-card__image">
                    <h2 class="subtitle subtitle--orange">{{plansName}}</h2>
                    <p><span class="parr--orange"> <i class="fas fa-map-marker-alt"></i></span>  Country: <span></span><span class="parr parr--black">{{plansCountry}}</span></p>
                </div>
                <div class="userplans-card__body">
                    <a href="/user/plans/delete/{{plansId}}" class="btn btn__danger" id="deletePlan">Remove</a>
                    <a href="/plans/{{plansId}}" class="btn btn__danger_transparent" id="details">Details</a>
                </div>
                <p class="parr parr--sm" id="timeago">{{timeago reservationsDate}}</p>
            </article>
        {{else}}
        <div class="container">
            <article class="admin-plans-card">
                <p class="parr">There are not plans/reservations yet</p>
                <a  class="btn btn__primary" href="/plans/">Add one!</a>
            </article>
        </div>
        {{/each}}
    </div>
</div>